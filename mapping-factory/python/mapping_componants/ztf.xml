<?xml version="1.0" ?>
<VODML>
	<MODELS>
		<MODEL>
			<NAME>meas</NAME>
			<URL>https://volute.g-vo.org/svn/trunk/projects/dm/STC/Meas/vo-dml/STC_meas-v1.0.vo-dml.xml</URL>
		</MODEL>
		<MODEL>
			<NAME>ivoa</NAME>
			<URL>http://www.ivoa.net/xml/VODML/20180519/IVOA-v1.0.vo-dml.xml</URL>
		</MODEL>
		<MODEL>
			<NAME>coords</NAME>
			<URL>https://volute.g-vo.org/svn/trunk/projects/dm/STC/Coords/vo-dml/STC_coords-v1.0.vo-dml.xml</URL>
		</MODEL>
		<MODEL>
			<NAME>coords</NAME>
			<URL>https://volute.g-vo.org/svn/trunk/projects/dm/photometric_point-v1.0.vo-dml.xml</URL>
		</MODEL>
		<MODEL>
			<NAME>coords</NAME>
			<URL>https://volute.g-vo.org/svn/trunk/projects/dm/cab-msd-v1.0.vo-dml.xml</URL>
		</MODEL>
	</MODELS>
	<GLOBALS>
		<!--  Space Frame ICRS -->
		<INSTANCE dmrole="root" dmtype="coords:SpaceFrame" ID="SpaceFrame_ICRS">
			<VALUE default="J2000" dmrole="coords:SpaceFrame.equinox" dmtype="coords:Epoch" />
			<VALUE dmrole="coords:SpaceFrame.planetaryEphem" dmtype="ivoa:string" ref="@@@@@@"/>
			<VALUE default="ICRS" dmrole="coords:SpaceFrame.spaceRefFrame" dmtype="ivoa:string"/>
			<INSTANCE dmrole="coords:SpaceFrame.refPosition" dmtype="coords:StdRefLocation">
				<VALUE default="GEOCENTER" dmrole="coords:StdRefLocation.position" dmtype="ivoa:string"/>
			</INSTANCE>
		</INSTANCE>
		<!-- Time frame (imported from coords) -->
		<INSTANCE dmrole="" dmtype="coords:TimeFrame" ID="TimeFrame_TT">
			<INSTANCE dmrole="coords:TimeFrame.refDirection" dmtype="coords:StdRefLocation">
				<VALUE default="BARYCENTER" dmrole="coords:StdRefLocation.position" dmtype="ivoa:string" />
			</INSTANCE>
			<INSTANCE dmrole="coords:TimeFrame.refPosition" dmtype="coords:StdRefLocation">
				<VALUE default="BARYCENTER" dmrole="coords:StdRefLocation.position" dmtype="ivoa:string" />
			</INSTANCE>
			<VALUE default="TT" dmrole="coords:TimeFrame.timescale" dmtype="ivoa:string"/>
		</INSTANCE>
		<!-- G filter definition: ad-hoc because no model yet -->
		<INSTANCE dmrole="" dmtype="cab-msd:Filter" ID="Filter_G">
			<VALUE default="G" dmrole="cab-msd:Filter.name" dmtype="ivoa:string"/>
			<VALUE default="http://svo.url.filter/zdf/g" dmrole="cab-msd:FilterUrl" dmtype="ivoa:string"/>
		</INSTANCE>
	</GLOBALS>
	<TEMPLATES ID="xxx">
		<!--
	       One single CAB-MSD instance in the VOTable (for purpose)
	     -->
		<INSTANCE dmrole="root" dmtype="cab-msd:Source">
			<VALUE dmrole="cab-msd:Source.identifier" dmtype="ivoa:string" default="My-ZD-Source"/>
			<!--
			  Set of measurements (STC2) attached to that instance 
			 -->
			<COMPOSITION dmrole="cab-msd:Measures">
				<!--
			      Position: not specified in the VOTable: hard coded in default attributes 
			     -->
				<INSTANCE dmrole="root" dmtype="meas:EquatorialPosition">
					<INSTANCE dmrole="meas:Measure.error" dmtype="meas:Error" >
						<INSTANCE dmrole="meas:Error.ranError" dmtype="meas:Symmetrical">
							<INSTANCE dmrole="meas:Symmetrical.radius" dmtype="ivoa:RealQuantity">
								<VALUE dmrole="ivoa:Quantity.unit" dmtype="ivoa:Unit" default="arcsec"/>
								<VALUE dmrole="ivoa:RealQuantity.value" dmtype="ivoa:real" default="1"/>
							</INSTANCE>
						</INSTANCE>
					</INSTANCE>
					<INSTANCE dmrole="meas:EquatorialPosition.dec" dmtype="coords:Latitude">
						<INSTANCE dmrole="coords:Coordinate.frame" ref="SpaceFrame_ICRS"/>
						<INSTANCE dmrole="coords:SpaceCoord.cval" dmtype="ivoa:RealQuantity">
							<VALUE dmrole="ivoa:Quantity.unit" dmtype="ivoa:Unit" default="deg"/>
							<VALUE dmrole="ivoa:RealQuantity.value" dmtype="ivoa:real" default="9.87147"/>
						</INSTANCE>
					</INSTANCE>
					<INSTANCE dmrole="meas:EquatorialPosition.ra" dmtype="coords:Longitude">
						<INSTANCE dmrole="coords:Coordinate.frame" ref="SpaceFrame_ICRS"/>
						<INSTANCE dmrole="coords:SpaceCoord.cval" dmtype="ivoa:RealQuantity" >
							<VALUE dmrole="ivoa:Quantity.unit" dmtype="ivoa:Unit" ref="deg"/>
							<VALUE dmrole="ivoa:RealQuantity.value" dmtype="ivoa:real" default="98.0025"/>
						</INSTANCE>
					</INSTANCE>
				</INSTANCE>
			</COMPOSITION>
			<!--
			    ARRAY: One instance of  cab-msd:VoInstance per DATATABLE row
			 -->
			<ARRAY>
				<!--
			      Associated data links of type VO instance (instances of the LightCurve model)
			      The model of those instances is given followed with the instance mapping 
			     -->
				<INSTANCE dmrole="cab-msd:links" dmtype="cab-msd:VoInstance">
					<VALUE dmrole="cab-msd:links.semantic" default="LightCurve"/>
					<VALUE dmrole="cab-msd:VoInstance.Model" default="photometric_point"/>
					<INSTANCE dmrole="cab-msd:VoInstance.Instance"/>
					<!--
					    set of measurement defined by the LightCurve model: time-stamp + mag)
					 -->
					<COLLECTION>
					    <!--
					       Time Stamp 
					     -->
						<INSTANCE dmrole="photometric_point:TimeStamp" dmtype="cab-msd:HJD">
							<INSTANCE dmrole="photometric_point:TimeStamp.date" dmtype="ivoa:RealQuantity">
								<VALUE dmrole="ivoa:Quantity.unit" dmtype="ivoa:Unit" default="d"/>
								<!-- fields have no ID: let's take their name as identifier -->
								<VALUE dmrole="ivoa:RealQuantity.value" dmtype="ivoa:real"  ref="hjd" />
							</INSTANCE>
							<INSTANCE dmrole="meas:Time.coord" dmtype="coords:TimeStamp">
								<INSTANCE dmrole="coords:Coordinate.frame" ref="TimeFrame_TT"/></INSTANCE>
							<COLLECTION size="1">
								<INSTANCE dmrole="meas:Measure.error" dmtype="meas:Error" >
									<INSTANCE dmrole="meas:Error.ranError" dmtype="meas:Symmetrical">
										<INSTANCE dmrole="meas:Symmetrical.radius" dmtype="ivoa:RealQuantity">
											<VALUE dmrole="ivoa:Quantity.unit" dmtype="ivoa:Unit" default="sec"/>
											<VALUE dmrole="ivoa:RealQuantity.value" dmtype="ivoa:real" default="1"/>
										</INSTANCE>
									</INSTANCE>
								</INSTANCE>
							</COLLECTION>
						</INSTANCE>
					    <!--
					       Mag : the band is given by the filter
					     -->
						<INSTANCE dmrole="root" dmtype="photometric_point:Mag">					
							<INSTANCE dmrole="photometric_point:Mag.coord" dmtype="photometric_point:Mag">
							    <VALUE dmrole="photometric_point:mag.value" dmtype="ivoa:real"  ref="mag" />
								<INSTANCE dmrole="photometric_point:Mag.frame" ref="Filter_G"/>
								</INSTANCE>
							<COLLECTION size="1">
								<INSTANCE dmrole="meas:Measure.error"  ref="magerr"/>
							</COLLECTION>
						</INSTANCE>
					</COLLECTION>
				</INSTANCE>
			</ARRAY>
		</INSTANCE>
	</TEMPLATES>
</VODML>
